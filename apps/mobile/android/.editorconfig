# EditorConfig for Tchat Android App
# Ensures consistent coding styles across different editors and IDEs

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

[*.{xml,json}]
indent_style = space
indent_size = 2

[*.gradle]
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2