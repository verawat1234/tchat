{
  "compilerOptions": {
    "outDir": "./dist/analyzer",
    "rootDir": "./src/lib/analyzer",
    "module": "Node16",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": [
    "src/lib/analyzer/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/fixtures/**"
  ]
}